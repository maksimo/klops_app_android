<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/articleFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/articleImageLayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/articlePhoto"
                app:layout_widthPercent="100%"
                app:layout_aspectRatio="178%"/>

            <ProgressBar
                android:id="@+id/articleProgress"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:visibility="visible" />
        </android.support.percent.PercentRelativeLayout>

        <TextView
            android:id="@+id/articleTitles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/articleImageLayer"
            android:textColor="@color/blackText"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp" />

        <View
            android:id="@+id/splitterArticleFirst"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_below="@+id/articleTitles"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:alpha="1"
            android:background="@color/greyText" />

        <TextView
            android:id="@+id/articleAuthors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/splitterArticleFirst"
            android:layout_marginLeft="15dp"
            android:textAllCaps="true"
            android:textColor="@color/darkGreyText"
            android:textSize="10sp"
            android:layout_marginRight="-10dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:nestedScrollingEnabled="false"
            android:layout_alignParentLeft="false"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/articleDates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/splitterArticleFirst"
            android:textAllCaps="true"
            android:textColor="@color/darkGreyText"
            android:textSize="10sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@+id/articleAuthors" />

        <ImageView
            android:id="@+id/articleCamera"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@+id/splitterArticleFirst"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/articleDates"
            android:background="@drawable/camera"
            android:visibility="gone" />

        <View
            android:id="@+id/splitterArticleSecond"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_below="@+id/articleDates"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:alpha="1"
            android:background="@color/greyText" />

        <TextView
            android:id="@+id/articleDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/splitterArticleSecond"
            android:lineSpacingExtra="1dp"
            android:minLines="1"
            android:textColor="@color/darkGreyText"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"/>

    </RelativeLayout>
</RelativeLayout>