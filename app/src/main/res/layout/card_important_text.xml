<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/important_news_text"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:elevation="2dp"
    android:orientation="vertical"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/important_date"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"
            android:text=""
            android:textStyle="bold"
            android:textColor="@color/greyText"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/news_status"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_toLeftOf="@+id/important_status"
            android:layout_marginRight="2dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/news_update_circle"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/important_status"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text=""
            android:textColor="@color/newsStatus"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/important_title"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/important_date"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:text=""
            android:textColor="@color/blackText"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/important_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/important_title"
            android:layout_height="110dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="@color/blackText"
            android:textSize="15dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
