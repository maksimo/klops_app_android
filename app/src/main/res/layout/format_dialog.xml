<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseLayout"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/formatDialogToolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/formatTitleImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/logo_int_settings"
            android:layout_marginTop="17dp" />

        <TextView
            android:id="@+id/formatTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/formatTitleImage"
            android:text="@string/formatTitle"
            android:textColor="@color/darkGreyText"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:gravity="left|center" />

    </RelativeLayout>
    <View
        android:id="@+id/splitterTitleInc"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_below="@+id/formatDialogToolbar"
        android:alpha="1"
        android:elevation="2dp"
        android:background="@color/darkGreyText" />

    <RelativeLayout
        android:id="@+id/increment"
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_below="@+id/splitterTitleInc"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/incrementTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/bigFont"
            android:textColor="@color/darkGreyText"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:id="@+id/splitIncMiddle"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_below="@+id/increment"
        android:background="@color/darkGreyText"
        android:elevation="1dp" />

    <RelativeLayout
        android:id="@+id/middle"
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_below="@+id/splitIncMiddle"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/middleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/middle"
            android:textColor="@color/darkGreyText"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:id="@+id/splitMiddleDec"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_below="@+id/middle"
        android:background="@color/darkGreyText"
        android:elevation="1dp" />

    <RelativeLayout
        android:id="@+id/decrement"
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_below="@+id/splitMiddleDec"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/decrementTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/dec"
            android:textColor="@color/darkGreyText"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:elevation="2dp"
        android:layout_below="@+id/decrement"
        android:background="@color/darkGreyText" />

</RelativeLayout>