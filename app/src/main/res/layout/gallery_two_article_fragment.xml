<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/galleryTwoArticle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/galleryCard">

            <RelativeLayout
                android:id="@+id/galleryTitleLayoutTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/galleryCard">

                <TextView
                    android:id="@+id/galleryTwoAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@color/greyText"
                    android:textSize="10sp"
                    android:text=""
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:id="@+id/galleryTwoDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/galleryTwoAuthor"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/greyText"
                    android:textSize="10sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="15dp" />

                <ImageView
                    android:id="@+id/galleryCameraIconTwo"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/galleryTwoDate"
                    android:background="@drawable/camera"
                    android:visibility="gone" />


                <ImageView
                    android:id="@+id/galleryTwoCam"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/galleryTwoAuthor"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/photo_cam" />

                <TextView
                    android:id="@+id/galleryTwoTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/galleryTwoDate"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="28sp"
                    android:paddingBottom="20dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/galleryImageLayerTwo"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_below="@+id/galleryTitleLayoutTwo">

                <ImageView
                    android:id="@+id/imageGalleryTwoBig"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:scaleType="centerCrop" />

                <ProgressBar
                    android:id="@+id/galleryTwoProgress"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:visibility="visible" />
            </RelativeLayout>

            <TextView
                android:id="@+id/galleryTwoDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/galleryImageLayerTwo"
                android:lineSpacingExtra="2dp"
                android:minLines="1"
                android:paddingBottom="15dp"
                android:text=""
                android:textColor="@color/greyText"
                android:textSize="16sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="30dp" />

        </RelativeLayout>
</RelativeLayout>