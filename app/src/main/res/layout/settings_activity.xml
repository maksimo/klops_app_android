<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settingsCoordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/recyclerBackground"
    android:fitsSystemWindows="true"
    android:orientation="vertical">






    <RelativeLayout
        android:id="@+id/mainSettingsLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarSettings"
        android:clickable="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/toolbarSettings"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:elevation="2dp"
            android:layout_height="?actionBarSize">

            <ImageView
                android:id="@+id/logo"
                android:clickable="true"
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/logo_sized"/>

            <TextView
                android:id="@+id/confirm_button"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right|center"
                android:paddingRight="10dp"
                android:text="@string/confirm"
                android:clickable="true"
                android:textColor="@color/blackText"
                android:textSize="18dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/toolbarSettings"
            android:background="@color/recyclerBackground"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="58dp">

            <TextView
                android:id="@+id/notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:gravity="bottom"
                android:text="@string/notifications"
                android:textColor="@color/greyText"
                android:textSize="10sp" />

        </RelativeLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout"
            android:background="@color/greySplitter" />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view2"
            android:background="@color/colorPrimary"
            android:elevation="2dp">

            <TextView
                android:id="@+id/quickly"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:gravity="left|center"
                android:text="@string/importantNews"
                android:textColor="@color/blackText"
                android:textSize="16sp" />

            <ToggleButton
                android:id="@+id/switch_notifications"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/toggle_selector"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout7"
            android:background="@color/greySplitter" />

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout2"
            android:background="@color/recyclerBackground">

            <TextView
                android:id="@+id/contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:gravity="bottom"
                android:text="@string/contacts"
                android:textColor="@color/greyText"
                android:textSize="10sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/greySplitter" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout3"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/mail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:gravity="left|center"
                android:text="@string/mail"
                android:textColor="@color/blackText"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="@string/email"
                android:textColor="@color/transparent"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/greySplitter" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout5"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/join"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:gravity="left|center"
                android:text="@string/joinUs"
                android:textColor="@color/blackText"
                android:textSize="15sp" />


            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/greySplitter" />

            <TextView
                android:id="@+id/joinPhone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignEnd="@+id/view4"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/view4"
                android:gravity="center"
                android:text="@string/joinPhone"
                android:textColor="@color/transparent"
                android:textSize="15sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/joinTestBaseUrl"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignEnd="@+id/view4"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/view4"
                android:background="@android:color/transparent"
                android:inputType="textUri"
                android:paddingLeft="5dp"
                android:textColor="@color/greyText"
                android:textSize="15sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/changeURLOk"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="false"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/joinTestBaseUrl"
                android:layout_toStartOf="@+id/joinTestBaseUrl"
                android:background="@color/colorAccent"
                android:text="Ok"
                android:textColor="@color/blackText"
                android:textSize="15sp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/relativeLayout5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout4"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/socialViber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:gravity="left|center"
                android:text="Viber /"
                android:textColor="@color/blackText"
                android:textSize="15sp"
                android:layout_marginRight="3dp"
                android:clickable="true" />

            <TextView
                android:id="@+id/socialWhats"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:text="WhatsApp"
                android:textColor="@color/blackText"
                android:textSize="15sp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/socialViber"
                android:layout_toEndOf="@+id/socialViber"
                android:clickable="true" />

            <TextView
                android:id="@+id/socialPhone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignEnd="@+id/view5"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/view5"
                android:gravity="center"
                android:text="@string/socialPhone"
                android:textColor="@color/transparent"
                android:textSize="15sp" />

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/greySplitter" />
        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/relativeLayout7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout6"
            android:background="@color/colorPrimary"
            android:elevation="2dp">

            <TextView
                android:id="@+id/advertise"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:gravity="left|center"
                android:text="@string/advertise"
                android:textColor="@color/blackText"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/advertisePhone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignEnd="@+id/view3"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/view3"
                android:gravity="center"
                android:text="@string/advertisePhone"
                android:textColor="@color/transparent"
                android:textSize="15sp" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/greySplitter" />

        </RelativeLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/socialBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:clipToPadding="true"
        android:background="@android:color/holo_orange_light"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <RelativeLayout
                android:id="@+id/socialBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/splitterSheet"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="false"
                    android:background="@color/greySplitter"
                    android:layout_alignParentBottom="false" />

                <RelativeLayout
                    android:id="@+id/socialViberLayer"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/splitterSheet"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:background="@color/colorPrimary">

                    <ImageView
                        android:id="@+id/viberLogo"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/viber"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:id="@+id/viberText"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_toRightOf="@+id/viberLogo"
                        android:text="Viber"
                        android:textColor="@color/blackText"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/socialCallLayer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_below="@+id/socialWhatsappLayer"
                    android:background="@color/colorPrimary">

                    <ImageView
                        android:id="@+id/callLogo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/phone"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:id="@+id/callText"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_toRightOf="@+id/callLogo"
                        android:text="Телефонный вызов"
                        android:textColor="@color/blackText"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_marginLeft="13dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/socialWhatsappLayer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_below="@+id/socialViberLayer"
                    android:background="@color/colorPrimary">

                    <ImageView
                        android:id="@+id/whatsappLogo"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/whatsapp"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:id="@+id/whatsappText"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_toRightOf="@+id/whatsappLogo"
                        android:text="Whatsapp"
                        android:textColor="@color/blackText"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_marginLeft="8dp" />

                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>