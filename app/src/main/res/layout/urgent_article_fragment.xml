<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/urgentArticle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/urgentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/blackText"
            android:textSize="26sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="30dp" />

        <View
            android:id="@+id/splitterUrgentFirst"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_below="@+id/urgentTitle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:background="@color/greyText"
            android:alpha="1" />

        <TextView
            android:id="@+id/urgentAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/splitterUrgentFirst"
            android:layout_marginLeft="15dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/darkGreyText"
            android:textSize="10sp"
            android:text=""
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="5dp" />


        <TextView
            android:id="@+id/urgentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/splitterUrgentFirst"
            android:layout_toRightOf="@+id/urgentAuthor"
            android:textAllCaps="true"
            android:text=""
            android:textColor="@color/darkGreyText"
            android:textSize="10sp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp" />

        <ImageView
            android:id="@+id/urgentCameraIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@+id/splitterUrgentFirst"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/urgentDate"
            android:background="@drawable/camera"
            android:visibility="gone"/>

        <View
            android:id="@+id/splitterUrgentSecond"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_below="@+id/urgentAuthor"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:background="@color/greyText"
            android:alpha="1" />

        <TextView
            android:id="@+id/urgentDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/splitterUrgentSecond"
            android:lineSpacingExtra="1dp"
            android:paddingBottom="15dp"
            android:minLines="1"
            android:text=""
            android:textColor="@color/darkGreyText"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp" />

    </RelativeLayout>
</RelativeLayout>